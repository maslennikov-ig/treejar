# =============================================================================
# Treejar AI Bot â€” Environment Variables
# Copy this file to .env and fill in the values
# =============================================================================

# --- Application ---
APP_NAME=treejar-ai-bot
APP_ENV=development  # development | staging | production
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
APP_LOG_LEVEL=INFO
APP_SECRET_KEY=change-me-in-production

# --- Database (PostgreSQL) ---
# Self-hosted on Hetzner (production):
DATABASE_URL=postgresql+asyncpg://treejar:password@localhost:5435/treejar
# Local development (docker-compose.dev.yml):
# DATABASE_URL=postgresql+asyncpg://treejar:treejar@localhost:5432/treejar
# Direct connection for migrations (same as DATABASE_URL for self-hosted):
DATABASE_URL_DIRECT=postgresql+asyncpg://treejar:password@localhost:5435/treejar

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- OpenRouter (LLM) ---
OPENROUTER_API_KEY=sk-or-v1-xxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# Model for intent extraction / structured output (fast, cheap)
OPENROUTER_MODEL_FAST=deepseek/deepseek-chat
# Model for response generation (powerful, multilingual)
OPENROUTER_MODEL_MAIN=deepseek/deepseek-chat

# --- Wazzup (WhatsApp Gateway) ---
WAZZUP_API_KEY=xxx
WAZZUP_API_URL=https://api.wazzup24.com/v3
WAZZUP_WEBHOOK_SECRET=change-me

# --- Zoho CRM ---
ZOHO_CRM_CLIENT_ID=xxx
ZOHO_CRM_CLIENT_SECRET=xxx
ZOHO_CRM_REFRESH_TOKEN=xxx
ZOHO_CRM_API_URL=https://www.zohoapis.eu/crm/v7
ZOHO_CRM_ACCOUNTS_URL=https://accounts.zoho.eu

# --- Zoho Inventory ---
ZOHO_INVENTORY_CLIENT_ID=xxx
ZOHO_INVENTORY_CLIENT_SECRET=xxx
ZOHO_INVENTORY_REFRESH_TOKEN=xxx
ZOHO_INVENTORY_API_URL=https://www.zohoapis.eu/inventory/v1
ZOHO_INVENTORY_ORG_ID=xxx

# --- Embeddings ---
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024

# --- Admin Panel ---
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-admin-password

# --- Telegram Notifications (Stage 2) ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# --- Domain (optional, for HTTPS) ---
DOMAIN=
